{
  "name": "mangala",
  "version": "1.0.0",
  "description": "Mangala Türk Zeka ve Strateji Oyunu - Web Tabanlı Oyun",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:client\" \"npm run dev:server\"",
    "dev:client": "vite",
    "dev:server": "tsx watch src/server/index.ts",
    "build": "npm run build:client && npm run build:server",
    "build:client": "npx vite build",
    "build:server": "npx tsc --project tsconfig.server.json",
    "start": "node dist/server/server/index.js",
    "preview": "vite preview",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "npx tsc --noEmit",
    "get-ip": "node get-ip.js"
  },
  "keywords": [
    "mangala",
    "game",
    "strategy",
    "board-game",
    "turkish-game"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/better-sqlite3": "^7.6.13",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.11.16",
    "@types/nodemailer": "^7.0.4",
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.19",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.17",
    "bcryptjs": "^3.0.2",
    "better-sqlite3": "^12.4.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "i18next": "^23.8.2",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^7.0.11",
    "postcss": "^8.4.35",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^14.0.5",
    "resend": "^6.5.2",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "vite": "^5.1.0",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "concurrently": "^9.2.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "tsx": "^4.20.6"
  }
}
